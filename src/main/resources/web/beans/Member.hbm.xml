<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="web.beans.Member" table="member">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="name" column="name" unique="true"/>
        <property name="email" column="email"/>
        <property name="question" column="question"/>
        <property name="answer" column="answer"/>
        <property name="phone" column="phone"/>
        <property name="pwd" column="pwd"/>
        <property name="sex" column="sex"/>
        <!--*********************************** -->
        <many-to-one name="corporation" class="web.beans.Corporation"
                     unique="true" column="cor_id" cascade="all"/>
        <set name="cars" cascade="all-delete-orphan">
            <key column="mem_id"/>
            <one-to-many class="web.beans.Car"/>
        </set>
        <set name="goods" cascade="all-delete-orphan">
            <key column="mem_id"/>
            <one-to-many class="web.beans.Goods"/>
        </set>
        <set name="infos" cascade="all-delete-orphan">
            <key column="mem_id"/>
            <one-to-many class="web.beans.DynamicInfo"/>
        </set>
        <set name="knowledges" cascade="all-delete-orphan">
            <key column="mem_id"/>
            <one-to-many class="web.beans.Knowledge"/>
        </set>
    </class>
</hibernate-mapping>